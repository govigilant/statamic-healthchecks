{
    "name": "govigilant/statamic-healthchecks",
    "description": "A Statamic addon to integrate healthchecks to your application which are compatible with Vigilant",
    "license": "MIT",
    "keywords": [
        "vigilant",
        "statamic",
        "healthchecks"
    ],
    "homepage": "https://govigilant.io",
    "authors": [
        {
            "name": "Vincent Bean",
            "email": "vincent@govigilant.io",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "statamic/cms": "^5.0",
        "govigilant/laravel-healthchecks": "^1.0"
    },
    "require-dev": {
        "larastan/larastan": "^3.0",
        "laravel/pint": "^1.7",
        "orchestra/testbench": "^10.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "phpstan/phpstan-mockery": "^2.0",
        "phpunit/phpunit": "^11.1"
    },
    "autoload": {
        "psr-4": {
            "Vigilant\\StatamicHealthchecks\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vigilant\\StatamicHealthchecks\\Tests\\": "tests/"
        }
    },
    "extra": {
        "statamic": {
            "name": "Statamic Healthchecks",
            "description": "A Statamic addon to integrate healthchecks to your application which are compatible with Vigilant"
        },
        "laravel": {
            "providers": [
                "Vigilant\\StatamicHealthchecks\\ServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "pixelfear/composer-dist-plugin": true
        }
    },
    "archive": {
        "exclude": [
            "devenv",
            "art"
        ]
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan",
        "style": "pint --test",
        "quality": [
            "@test",
            "@analyse",
            "@style"
        ],
        "fix-style": "pint"
    }
}
